# App
APP_NAME=FastAPI SaaS Starter
DEBUG=true
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Shutdown
SHUTDOWN_GRACE_PERIOD=30

# Auth
# Generate with: openssl rand -hex 32
# NEVER use this example value in production!
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=1

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=main-queue

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Metrics (optional)
# If set, /metrics endpoint requires this API key via X-Metrics-API-Key header
# METRICS_API_KEY=your-metrics-api-key

# Email (Resend) - https://resend.com
# If not set, verification emails are logged but not sent (dev mode)
# RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@example.com
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# Invites
INVITE_EXPIRE_DAYS=7

# Cleanup (Temporal scheduled workflow)
# Cron syntax, e.g., "0 3 * * *" for daily at 3am UTC
# CLEANUP_SCHEDULE=0 3 * * *
CLEANUP_RETENTION_DAYS=30

# Redis (optional - app works without it)
# Enables distributed rate limiting and caching
# REDIS_URL=redis://localhost:6379/0
# REDIS_POOL_SIZE=10

# Rate Limiting (global middleware - DoS protection)
GLOBAL_RATE_LIMIT_PER_SECOND=10
GLOBAL_RATE_LIMIT_BURST=20
